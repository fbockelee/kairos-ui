#set ( $LCentityName = $fn.uncapitalize($entity.name) )
#set ($idsPrefix = "${LCentityName}.")
<!-- File generated by $generator.name ( version $generator.version ) - Date $today.date("yyyy-MM-dd") ( Time $today.time ) --> 

 	<p-table #dt [value]="listOf${entity.name}s" selectionMode="single" [scrollable]="true" scrollHeight="450px" [rowHover]="true"
 			$entity.keyAttributesNamesAsString(' ', 'dataKey="', '"') editMode="row">
        <ng-template pTemplate="caption">
        	<button pButton type="button" label="CrÃ©er" class="ui-button-rounded" routerLink="../${LCentityName}-form"></button>
        </ng-template>
		<ng-template pTemplate="header">
			<tr>
#foreach ( $extattrib in $extAttributes)
#set ($attrib = $entity.attributes.get($extattrib.index))
		        <th [ngStyle]="{'display': columnDefinitions[$foreach.index].display}">${extattrib.ext1}</th>
#end
		        <th [ngStyle]="{'width': '100px'}"></th>
		    </tr>
		</ng-template>
		<ng-template pTemplate="body" let-$LCentityName let-editing="editing" let-ri="rowIndex">
		    <tr class="ui-selectable-row" (click)="!editable && edit${entity.name}(${entity.keyAttributesNamesAsString(', ', $idsPrefix, '')})"  [pEditableRow]="$LCentityName">
#foreach ( $extattrib in $extAttributes)
#set ($attrib = $entity.attributes.get($extattrib.index))
#if ( $attrib.isDateType() )
		        <td [ngStyle]="{'display': columnDefinitions[$foreach.index].display}">
					{{${idsPrefix}${attrib.name} | date:'dd/MM/yyyy'}}
				</td>
#elseif ( $attrib.isBooleanType())
				<td [ngStyle]="{'display': columnDefinitions[$foreach.index].display}">
					<p-checkbox [(ngModel)]="${idsPrefix}${attrib.name}" binary="true" readonly></p-checkbox>
				</td>
#else
		        <td [ngStyle]="{'display': columnDefinitions[$foreach.index].display}">
                	<p-cellEditor>
                    	<ng-template pTemplate="input">
                        	<input pInputText type="text" [(ngModel)]="${idsPrefix}${attrib.name}">
                    	</ng-template>
                    	<ng-template pTemplate="output">
                        	{{${idsPrefix}${attrib.name}}}
                    	</ng-template>
                	</p-cellEditor>	
						
				</td>
#end	
#end
		        <td [ngStyle]="{'width': '100px'}">
					<button *ngIf="editable && !editing" pButton type="button" pInitEditableRow icon="pi pi-pencil" class="ui-button-info" (click)="onRowEditInit(${LCentityName}); ${DOLLAR}event.stopPropagation();"></button>
                	<button *ngIf="editable && editing" pButton type="button" pSaveEditableRow icon="pi pi-check" class="ui-button-success" style="margin-right: .5em" (click)="onRowEditSave(${LCentityName}); ${DOLLAR}event.stopPropagation();"></button>
                	<button *ngIf="editable && editing" pButton type="button" pCancelEditableRow icon="pi pi-times" class="ui-button-danger" (click)="onRowEditCancel(${LCentityName}, ri); ${DOLLAR}event.stopPropagation();"></button>                            
		            <button *ngIf="!editing" pButton type="button" class="ui-button-danger " (click)="deleteConfirmation(${entity.keyAttributesNamesAsString(', ', $idsPrefix, '')}); ${DOLLAR}event.stopPropagation();" icon="fa fa-trash" title="Supprimer"
                            pTooltip="Supprimer" tooltipPosition="top"></button>
                </td>
		    </tr>
		</ng-template>
	</p-table>    
